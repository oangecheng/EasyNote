<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        style="@style/dialog"
        android:id="@+id/rl_2"
        android:background="@drawable/dialog_shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_interval"
            android:text="输入类别名称"
            android:textSize="25dp"
            android:textColor="@color/BLACK_COMMON"/>


        <EditText
            android:id="@+id/et_category_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_interval"
            android:layout_marginRight="@dimen/size_interval"
            android:layout_marginTop="@dimen/size_interval"
            android:layout_below="@id/tv_1"
            android:hint="十个字以内"
            android:maxLength="5"
            android:background="@drawable/dialog_shape"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_category_title"
            android:layout_below="@id/et_category_title"
            android:layout_marginBottom="@dimen/size_interval"
            android:layout_marginTop="@dimen/size_interval"
            android:text="确定"
            android:textColor="@color/WHITE_COMMON"
            android:textSize="@dimen/size_text"
            android:background="@drawable/button_click_style"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/et_category_title"
            android:layout_below="@id/et_category_title"
            android:layout_marginBottom="@dimen/size_interval"
            android:layout_marginTop="@dimen/size_interval"
            android:text="取消"
            android:textColor="@color/WHITE_COMMON"
            android:textSize="@dimen/size_text"
            android:background="@drawable/button_click_style"/>

    </RelativeLayout>


</RelativeLayout>